{
  "name": "@strato-space/media-gen-mcp",
  "version": "1.0.3",
  "description": "MCP server for OpenAI Images/Videos and Google GenAI (Veo) media generation.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strato-space/media-gen-mcp.git"
  },
  "mcpName": "io.github.strato-space/media-gen-mcp",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.28.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@cfworker/json-schema": "^4.1.1",
    "@google/genai": "^1.33.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "dotenv": "^17.2.3",
    "openai": "^6.9.1",
    "zod": "^4.1.3"
  },
  "optionalDependencies": {
    "sharp": "^0.34.2"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "which": "which tsx",
    "esbuild": "esbuild src/index.ts src/lib/compression.ts --bundle --platform=node --target=node20 --format=esm --outdir=dist --packages=external",
    "start": "node dist/index.js",
    "mcp": "npm run start",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "restart": "npm run ci && systemctl restart mcp@media-gen",
    "test-images": "tsx debug/debug-call.ts",
    "test-images:raw": "tsx debug/debug-call-raw.ts"
  },
  "bin": {
    "media-gen-mcp": "dist/index.js"
  }
}
